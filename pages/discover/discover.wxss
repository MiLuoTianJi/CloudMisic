/* pages/discover/discover.wxss */
.search-bar{
    background-color:#DC4238;
    border: 1px  solid #DC4238;
    padding: 30rpx;
}
.search-bar-inputBox{
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #fff;
    border: 0px solid #DE655C;
    border-radius: 20rpx;
    color: #9b9b9b;
    height: 70rpx;
}
.search-bar-input{
    margin-left: 10rpx;
}
.header{
    display: flex;
    background-color: #DC4238;
    padding-bottom: 34rpx;
    justify-content: space-around;
    align-items: center;
}
.header-recommended,.header-station{
    position: relative;
    flex: 0 1 40%;
    font-size: 15px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
}
.header-recommended-bottom,.header-station-bottom{
    position: absolute;
    bottom: -18rpx;
    left: 50%;
    transform: translateX(-50%);
    width: 100rpx;
    height: 14rpx;
    color: #fff;
    z-index: 999;
    background: #fff;
    border-radius: 10rpx;
    z-index: 999;
}
.swiper{
    /* min-height: 240px; */
}
.swiper-item{
    position: relative;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}
.swiper-item-image{
    height: 100%;
    width: 80%;
    display: block;
    border-radius: 20rpx;
}
.swiper-item-background{
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    transform: scale(2);
    filter: blur(20px) brightness(70%);
    z-index: -999;
}
.recommended{

}
.recommended-fourNav,.station-fourNav{
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 40rpx;
    border-bottom: 1px solid #EDEEF0;
}
.recommended-fourNav-item,.station-fourNav-item{
    /* font-size: rpx; */
    display: flex;
    flex-flow: column;
    align-items: center;
    justify-content: space-between;
    font-size: 34rpx;
}
.recommended-fourNav-item-icon,.station-fourNav-item-icon{
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100rpx;
    height: 100rpx;
    background: #DC4238;
    margin-bottom: 10rpx;
    border-radius: 50%;
}
.recommended-fourNav-item-icon>image,.station-fourNav-item-icon>image{
    width: 50rpx;
    height: 50rpx;
}

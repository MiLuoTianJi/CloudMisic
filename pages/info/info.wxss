/* 歌手排行 */
.singer-list{
    display: flex;
    flex-flow: column nowrap;
    padding: 10rpx 30rpx;
}
.singer-list-item{
    display: flex;
    align-items: center;
    height: 200rpx;
    width: 100%;
}
.singer-list-item-index{
    display: flex;
    align-items: center;
    justify-content: center;
    color: #9A9A9B;
}
.singer-list-item-image{
    height: 160rpx;
    width: 220rpx;
    margin: 0 40rpx;
    border-radius: 20rpx;
}
.singer-list-item-info{
    display: flex;
    flex-flow: column nowrap;
    justify-content: space-around;
    height: 100%;
}
.singer-list-item-info-name{
    font-size: 15px;
}
.singer-list-item-info-hot{
    font-size: 12px;
    color: #9A9A9B;
}
/* 排行榜 */
.ranking{
    display: flex;
    flex-flow: column nowrap;
    padding: 20rpx 30rpx;
}
.ranking-item{
    display: flex;
    margin-bottom: 40rpx;
}
.ranking-item-left{
    margin-right: 30rpx;
}
.ranking-item-left-image{
    width: 240rpx;
    height: 240rpx;
    border-radius: 30rpx;
}
.ranking-item-right{
    color: #9A9A9B;
    display: flex;
    justify-content: space-around;
    flex-flow: column nowrap;
    font-size: 28rpx;
}
